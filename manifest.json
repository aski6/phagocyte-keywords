{
  "description": "A simple browser extension that hides articles based on a user-selected keyword list.",
  "manifest_version": 2,
  "name": "Phagocyte-keywords",
  "version": "0.1.0",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Phagocyte-keywords",
    "default_popup": "popup/toggle.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{https://github.com/aski6/phagocyte-keywords}"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "eat.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "eat.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
